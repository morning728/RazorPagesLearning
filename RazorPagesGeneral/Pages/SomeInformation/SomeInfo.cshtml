@page
@model RazorPagesGeneral.Pages.SomeInformation.SomeInfoModel
@{
}
<p>Some INfo</p>
<div class="col-1 col-lg-3" id="Count">Size of Event List: @Model.events.Count()</div>
///////////////////////////////////////////////////////////////////////
//Form and canvas
///////////////////////////////////////////////////////////////////////
<div class="row">
    <div class="col-1 innerX">X-pos</div>
    <div class="col-1 innerY">Y-pos</div>
</div>
<div class=" row">
    <div class=" col-auto">
        <canvas id='canvas' width="1000" height="400"></canvas>
    </div>
    <div class=" col-auto" style="text-align: right" >
        <form method="post" class="mt-3">
            <div class="form-group row">
                <div class="col">
                    <input asp-for="Event.EventName" class="form-control" placeholder="Event Name" />
                    <span asp-validation-for="Event.EventName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <input asp-for="Event.Description" class="form-control" placeholder="Discription" />
                    <span asp-validation-for="Event.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <input asp-for="Event.PosX" class="form-control" placeholder="X-Position" />
                    <span asp-validation-for="Event.PosX" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <input asp-for="Event.PosY" class="form-control" placeholder="Y-Position" />
                    <span asp-validation-for="Event.PosY" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card-footer text-center" style="background-color: rgba(0, 0, 0, 0.25);">
                        <button type="submit" class="btn btn-success ">Create</button>
                        <a asp-page="index" class="btn btn-danger ">Cancel</a>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>
///////////////////////////////////////////////////////////////////////
//Events
///////////////////////////////////////////////////////////////////////
<div class="row">
    @for (var i = 0;i< @Model.events.Count(); i++){
        <div class="col-3 text-center ">
            <div class="card-deck">
                <div class="card m-3">
                    <div class="card-header text-center">
                        <h3>@Model.events[i].EventName</h3>
                    </div>
                    <div class="card-body">
                        <img src="/images/main_pic.jpg" width="30" height="30">
                        <p style="margin-top:10px">Description: @Model.events[i].Description</p>
                        <div class=" row">
                            <div class="col-5">
                                <div>X-Position: </div>
                                <div>Y-Position: </div>
                            </div>
                            <div class=" col-auto">
                                <div id="@(i)X">@Model.events[i].PosX</div>
                                <div id="@(i)Y">@Model.events[i].PosY</div>
                            </div>
                        </div>
                    </div>
                    <div class=" card-footer text-center">
                        <a class="btn-danger  m-1">wrug?</a>
                        <a class="btn-light  m-1" asp-page = "/Index">wrg?</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/js/map-script.js" data-container=@Model.events.Count() id="Main_script"></script>

    



