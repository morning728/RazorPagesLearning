@page
@model RazorPagesGeneral.Pages.Locations.EventEditPageModel
@{
    string path = $"/images/{Model.Event.PhotoPath ?? "noImageCase.jpg"}";
}
<div class="main-content">
    <section class=" darken-bg" style="padding-left:2.7em; padding-right:2.7em; padding-top:0.5em; margin:100px" id="section-contact">
        <div class="container">
          <div class="row">
            <div class="col-11 ">

              <form method="post" enctype="multipart/form-data">
                  <input type="hidden" asp-for="Event.Id">
                  <input type="hidden" asp-for="Event.Photos">
                  
                  <input type="hidden" asp-for="Event.LocationId">
                  <input type="hidden" asp-for="Event.PhotoPath">
                    
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label class="text-white" >event name</label> 
                        <input  id="eventName" class="form-control text-center" placeholder="funny case" asp-for="Event.EventName">
                        <span asp-validation-for="Event.EventName" class="text-danger"></span>
                      </div>
                    </div>

                    <section class="row align-items-stretch" id="section-photos">   
                        <div class="container-fluid">
                            <div class="row">
                                
                                    @if (Model.Event.Photos != null)
                                    {
                                        @foreach (var item in Model.Event.Photos.Split(","))
                                        {
                                            if(item != ""){
                                               <div class="col-auto">
                                               <img src = "/images/@item" alt="photo" style="padding-bottom:5px" class="align-content-center" width="520px">
                                               </div>
                                            }
                                            
                                        }

                                    }
                                <div class="photo-text-more col-auto">
                                    <input  id="photo" class="form-control" asp-for="Photo">
                                </div>
                            </div>
                        </div>
                        
                     </section>

                    <div class="row form-group mb-5">
                      <div class="col-md-12">
                        <label class="text-white" >discription</label> 
                        <textarea  id="discription"  class="form-control" cols="30" rows="7" placeholder="it was a sunny day..." asp-for="Event.Description"></textarea>
                        <span asp-validation-for="Event.Description" class="text-danger"></span>
                      </div>
                    </div>

                    <div class="row form-group">
                      
                      <div class="col-md-4">
                        <label class="text-white">date: </label>
                        <input  id="Date" class="form-control" asp-for="Event.Date" type="date" value=@Model.Event.Date min="0988-01-01" max="2025-01-01">
                        <span asp-validation-for="Event.Date" class="text-danger"></span>
                      </div>
                    </div>
                    <div class="row">
                        <div class="row form-group">
                          <div class="col-md-12" style="left:25em">
                            <input type="submit" value="change" 
                                class="btn btn-primary btn-md text-white" asp-route-id="@Model.Event.LocationId">
                            <a value="back" class="btn btn-primary btn-md text-white" 
                                asp-page="/Locations/LocationPage" asp-route-id="@Model.Event.LocationId">back</a>
                          </div>
                        </div>  
                    </div>
                  </form>
            </div>
          </div>
        </div>
      </section>
</div>

<script src="~/js/jquery-3.3.1.min.js"></script>
  <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
  <script src="~/js/jquery.easing.1.3.js"></script>
  <script src="~/js/jquery-ui.js"></script>
  <script src="~/js/popper.min.js"></script>
  <script src="~/js/bootstrap.min.js"></script>
  <script src="~/js/owl.carousel.min.js"></script>
  <script src="~/js/jquery.stellar.min.js"></script>
  <script src="~/js/jquery.countdown.min.js"></script>
  <script src="~/js/jquery.magnific-popup.min.js"></script>
  <script src="~/js/bootstrap-datepicker.min.js"></script>
  <script src="~/js/aos.js"></script>
  <script src="~/js/jquery.fancybox.min.js"></script>
  <script src="~/js/main.js"></script>
