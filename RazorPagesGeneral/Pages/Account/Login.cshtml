@page
@model RazorPagesGeneral.Pages.Account.IndexModel
@{
}
<div style="text-align:center">
    <h2>Вход на сайт</h2>
 
    <form method="post" asp-anti-forgery="true">
        <div class="validation"></div>
        <div>
            <div class="form-group">
                <label asp-for="user.login">Введите login</label>
                <input type="text" asp-for="user.login" />
                <span asp-validation-for="user.login" />
            </div>
            <div class="form-group">
                <label asp-for="user.password">Введите пароль</label>
                <input asp-for="user.password" />
                <span asp-validation-for="user.password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>